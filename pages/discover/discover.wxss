/* pages/discover/discover.wxss */

page {
  height: 100%;
  background-color: #f8f8f8;
}

.content {
  height: 100%;
}

.list-box {
  display: flex;
  flex-direction: column;
  padding: 15px 0;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background-color: white;
}

.item-left {
  flex: 1;
  display: flex;
  align-items: center;
  font-size: 17px;
}

.item-left text {
  margin-left: 15px;
}

.item-right {
  display: flex;
  align-items: center;
}

.item-margin {
  margin-top: 20px;
}

.item-group-one {
  border-top: 1px solid #f4f4f4;
  border-bottom: 1px solid #f4f4f4;
}

.item-group-line{
  height: 1px;
  background-color: #f4f4f4;
  margin-left: 15px;
}

.item-group{
  background-color: white;
}

.item-group-first{
  border-top: 1px solid #f4f4f4;
}

.item-group-last{
  border-bottom: 1px solid #f4f4f4;
}