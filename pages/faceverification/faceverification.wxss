/* pages/faceverification/faceverification.wxss */
.list-item {
  width: 750rpx;
  height: 65rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.item-image{
  width: 100%;
  height: 300rpx;
  text-align:center;
}
.item-list-image{
  width: 200rpx;
  height: 200rpx;
  margin-top: 50rpx;
}
.list-item-text{
  font-size: 26rpx;
  margin-left: 20rpx;
  
}

.item-input{
  font-size: 26rpx;
  margin-left: 30rpx;
}
.person-line {
  width: 100%;
  height: 5rpx;
  background-color: #F0F0F0;
}
.person-line-radio{
  width: 100%;
  height: 15rpx;
  background-color: #F0F0F0;
}
.list-last-item{
  
  margin-top: 20rpx;
  text-align:center;
}
.item-last-text{
   width: 70%;
   height: 70rpx;
   background-color: #DE5246;
   color:#F0F8FF; 
   font-size: 30rpx;
}
.list-code{
   text-align:center;
}
.list-item-code{
  
    font-size: 25rpx;
}
.hide{
    display: none;
    height:50rpx;
    font-size: 20rpx;
    color:#FF5500;
    border: 2px solid #FF5500;
}
.show{
    display: block;
    height:50rpx;
    font-size: 20rpx;
    color:#FF5500;
    border: 1px solid #FF5500;
}
.list-index{
    width: 100%;
    height:60rpx;
    font-size: 25rpx;
    text-align:center;
    margin-top: 20rpx;
}
