/* pages/feedback/feedback.wxss */

page {
  height: 100%;
  background-color: #f8f8f8;
}

.list-item {
  background-color: white;
  height: 220px;
  display: flex;
  margin-top: 10px;
}

.list-item textarea {
  margin: 10px 15px;
  height: 200px;
}

.item-input {
  width: 100%;
  font-size: 17px;
}

.person-line {
  width: 100%;
  height: 1rpx;
  background-color: #888;
}

.list-last-item {
  margin-top: 40rpx;
  text-align: center;
}

.item-last-button {
  margin: 0 15px;
  background-color: #ff2d2d;
  color: #fff;
  font-size:15px;
}
