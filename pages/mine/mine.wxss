/* pages/mine/mine.wxss */
.container{
   width: 100%;
   flex-direction: column;
}
.userinfo {
  display: flex;
  flex-direction: column;
  background: #f0145a;  
 
}

.userinfo-set-img{
  text-align:right;
    /* height: 140rpx;  */
}
.userinfo-img{
  
  margin: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.account-bg {
  width: 100%;
  height: 100rpx;
}
.userinfo-image {
  height: 225rpx;  
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.userinfo-avatar {
  
  width: 108rpx;
  height: 108rpx;
  margin: 60rpx; 
  margin-top: 0rpx;
  border-radius: 50%;
}
.userinfo-nickname {
  margin: -20rpx;
  height: 100rpx;
  color: #000000;
}


.navs {
  display: flex;
}
.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}
.nav-item .nav-image {
  width: 40rpx;
  height: 50rpx;
  margin: 5rpx;
}
.nav-item text {
  width: 150rpx;
  /* align-items: center; */
  text-align: center;
  margin-top: 10rpx;
  font-size: 30rpx;
  color: gray;
}
/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}
.list-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.item-image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 35rpx;
}
.item-text {
  color: #000000;
  font-size: 30rpx;
  margin-left: 20rpx;
  margin-top: 7rpx;
}
.item-last-image{
  width: 40rpx;
  height: 40rpx;
  margin-left: 460rpx; 
}
.item-last-image-radio{
  width: 35rpx;
  height: 35rpx;
  margin-left: 493rpx;
}

.person-line {
  width: 100%;
  height: 4.5rpx;
  background-color: #F0F0F0;
}
.person-line-radio{
  width: 100%;
  height: 15rpx;
  background-color: #F0F0F0;
}

.line-default {
  height: 1px;
  background-color: #888888;
  margin: 0px 20px;
}