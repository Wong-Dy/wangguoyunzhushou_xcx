page {
  height: 100%;
  background-color: #fcedef;
}

.content {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.code-box-view {
  display: flex;
  flex-flow: column;
  align-items: center;
  background-color: white;
  padding: 0px 20px 20px 20px;
  margin: 0px 30px;
  border: 1px solid #f21e33;
  border-radius: 5px 5px;
}

.code-bottom-text {
  margin-top: 10px;
  font-size: 14px;
  color: #727272;
}

.group-info {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  margin-bottom: 10px;
  padding: 10px 15px;
}

.group-info-left {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.group-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.group-info-content .top1 {
  font-size: 15px;
  word-break:break-all;
}

.group-info-content .top2 {
  font-size: 14px;
  color: darkgray;
}
