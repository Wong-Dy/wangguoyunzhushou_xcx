/* pages/group/group.wxss */

page {
  height: 100%;
  background-color: #f8f8f8;
}

.content {
  height: 100%;
}

.scroll-view {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.list-box {
  display: flex;
  flex-direction: column;
  background-color: white;
  margin-bottom: 10px;
  /* box-shadow: 0 0 40rpx #f4f4f4 inset; */
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  border-bottom: 1px solid #f4f4f4;
  padding: 10px 15px;
}

.list-item-last {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  padding: 10px 15px;
}

.item-left {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.item-left-info {
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}

.item-left-info .top1 {
  font-size: 17px;
}

.item-left-info .top2 {
  font-size: 14px;
  color: darkgray;
}

.item-right {
  display: flex;
  flex-direction: row;
}

.item-right .top1 {
  font-size: 16px;
  color: darkblue;
}

.not-data-view {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: white;
  justify-content: center;
  align-items: center;
}

.not-data-view .botton-group {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 80%;
}

.not-data-view .botton-group .create {
  font-size: 26px;
  border-radius: 3px;
  color: #fff;
  background-color: crimson;
  padding: 26px;
  margin-bottom: 15px;
}

.not-data-view .botton-group .create:active {
  background-color: #2a6247;
}

.not-data-view .botton-group .join {
  font-size: 26px;
  border-radius: 3px;
  color: #fff;
  background-color: orange;
  padding: 26px;
  margin-bottom: 15px;
}

.not-data-view .botton-group .join:active {
  background-color: #2a6247;
}

.not-data-view .text-group {
  display: flex;
  flex-direction: ccolumn;
}

.not-data-view .text-group .remark {
  font-size: 14px;
  color: darkred;
  margin-bottom: 26px;
}

.level-lable {
  padding: 7px 15px;
  margin-bottom: 5px;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #f4f4f4;
}

.level-lable text {
  color: darkcyan;
  font-size: 17px;
}

.help-view {
  position: absolute;
  bottom: 15px;
  width: 100%;
  text-align: center;
}

.help-view text {
  font-size: 15px;
  color: darkslateblue;
}

.group-info {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  /* border-bottom: 5px solid cornflowerblue; */
  box-shadow: 0px 5px 10px cornflowerblue;
  margin-bottom: 10px;
  padding: 10px 15px;
}

.group-info-left {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.group-info-content {
  display: flex;
  flex-direction: column;
  margin-left: 5px;
}

.group-info-content .top1 {
  font-size: 17px;
}

.group-info-content .top2 {
  font-size: 14px;
  color: darkgray;
}

.group-info-right {
  display: flex;
  flex-direction: row;
  padding: 5px 0px 5px 10px;
}

.group-info-right .top1 {
  font-size: 16px;
  color: darkblue;
}
