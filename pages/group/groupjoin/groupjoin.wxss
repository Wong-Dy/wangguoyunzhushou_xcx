/* pages/group/groupjoin/groupjoin.wxss */

page {
  height: 100%;
  background-color: #f8f8f8;
}

.content {
  height: 100%;
}

.group-info {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  /* border-bottom: 5px solid cornflowerblue; */
  box-shadow: 0px 5px 10px cornflowerblue;
  margin-bottom: 10px;
  padding: 10px 15px;
}

.group-info-left {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.group-info-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.group-info-content .top1 {
  font-size: 15px;
}

.group-info-content .top2 {
  font-size: 14px;
  color: darkgray;
}

.master-info {
  display: flex;
  align-items: center;
  padding: 10px 15px;
  background-color: white;
  border-bottom: 1px solid #f4f4f4;
}

.master-info .left-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 10px;
}

.master-info .updateTime {
  color: darkgray;
  font-size: 14px;
}

.bottom-view {
  position: absolute;
  bottom: 100px;
  margin-top: 50px;
  padding: 10px 0px;
  width: 100%;
}

.bottom-view .joinBtn {
  font-size: 16px;
  margin: 0 15px;
}
