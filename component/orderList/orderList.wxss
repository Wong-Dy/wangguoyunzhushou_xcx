.order {
  box-sizing: border-box;
  padding: 10px 0;
  display: flex;
  flex-direction: column;
  margin-top:5px;
  background-color: white;
  /* box-shadow: 0 0 40rpx #f4f4f4 inset; */
}

.order-item {
  margin-bottom: 20rpx;
  background-color: #fff;
  border-bottom: 1px solid #eee;
  overflow: hidden;
  animation: fadeIn 1s;
  padding: 0 15px 10px 15px;
}

.order-info {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
}

.order-intro {
  display: flex;
  flex-direction: column;
}

.order-info-img {
  width: 50px;
  height: 50px;
}

.order-title, .order-status {
  margin-left: 10px;
  font-size: 14px;
}

.order-status {
  margin-top: 6px;
}

.order-intro-right {
  position: absolute;
  right: 0;
  margin-right: 15px;
  width: 100%;
  text-align: right;
}

.order-time {
  font-size: 14px;
}

.order-price {
  font-size: 18px;
  font-weight: bold;
}

