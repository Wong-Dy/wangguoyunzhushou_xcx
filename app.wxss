/**app.wxss**/
.container {
  display: block;
}

page{
  height: 100%;
  font-family: "Helvetica Neue",Arial,"PingFang SC","Microsoft YaHei",sans-serif;
}

.loading-more-tip{
  font-size: 14px;
  color:#4e4e4e;
  text-align: center;
}

.weui-loading {
  margin: 10px 5px;
  width: 25px;
  height: 25px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;

  background: url(https://app.isaihu.com/resource-lib/images/loading/loading_4.png) no-repeat;  

  /* background: transparent url(data:image/svg+xml;base64,) no-repeat; */
  background-size: 100%;
}
